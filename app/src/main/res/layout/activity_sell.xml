<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/headerbar" />
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="2FRESH2WASTE"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/john"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/x_transparenttiny"
        app:layout_constraintStart_toStartOf="@+id/topBar"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />

    <TextView
        android:id="@+id/newpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="NEW POST"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="@+id/newpost"
        app:layout_constraintTop_toBottomOf="@+id/newpost"
         />

    <TextView
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="SHOWN INFORMATION"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintEnd_toEndOf="@+id/newpost"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="@+id/newpost"
        app:layout_constraintTop_toBottomOf="@+id/line" />



    <ImageView
        android:id="@+id/pp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/john"
        app:layout_constraintStart_toStartOf="@+id/header2"
        app:layout_constraintTop_toBottomOf="@+id/header2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="John Filmer"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="15sp"
        android:id="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/pp"
        app:layout_constraintStart_toEndOf="@+id/pp"
        app:layout_constraintTop_toBottomOf="@+id/header2" />

    <ImageView
        android:id="@+id/pin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/pin_icon"
        app:layout_constraintStart_toStartOf="@+id/header2"
        app:layout_constraintTop_toBottomOf="@+id/pp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="6879 Academy Way"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/pin"
        app:layout_constraintStart_toEndOf="@+id/pin"
        app:layout_constraintTop_toBottomOf="@+id/name" />
    <EditText
        android:id="@+id/pname"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding= "4dp"
        android:textSize="16dp"
        android:background="#F2F2F2"
        app:layout_constraintTop_toBottomOf="@+id/pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Enter Product Name..."
        />
    <EditText
        android:id="@+id/pdesc"
        android:layout_width="310dp"
        android:layout_height="75dp"
        android:gravity="left"
        android:padding= "4dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:background="#F2F2F2"
        app:layout_constraintTop_toBottomOf="@+id/pname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:hint="Enter Product Description..."
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pdesc"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintStart_toStartOf="@+id/pdesc"
        android:layout_marginTop="4dp"
        android:text="Price"
        />
    <EditText
        android:id="@+id/insertprice"
        android:layout_width="60dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/pdesc"
        app:layout_constraintEnd_toEndOf="@+id/pdesc"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        android:background="#FFFFFF"
        android:textSize="13dp"
        android:hint="0.00"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/moneysign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintEnd_toStartOf="@+id/insertprice"
        app:layout_constraintTop_toBottomOf="@+id/pdesc"
        android:text="$"
        android:layout_marginRight="4dp"
        />
    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintStart_toStartOf="@+id/pdesc"
        android:text="Weight"
        />
    <EditText
        android:id="@+id/insertweight"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/insertprice"
        app:layout_constraintEnd_toEndOf="@+id/pdesc"
        app:layout_constraintRight_toLeftOf="@+id/spinner"
        android:layout_marginRight="34dp"
        android:background="#FFFFFF"
        android:layout_marginTop="4dp"
        android:textSize="13dp"
        android:hint="0.00"
        android:gravity="center"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/insertprice"
        app:layout_constraintEnd_toEndOf="@+id/pdesc"
        />
    <TextView
        android:id="@+id/expirationdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        app:layout_constraintStart_toStartOf="@+id/pdesc"
        android:text="Expiration Date"
        />
    <EditText
        android:id="@+id/insertdate"
        android:layout_width="130dp"
        android:textSize="13dp"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="text"
        android:clickable="false"
        android:focusable="false"
        android:layout_margin="0dp"
        app:layout_constraintTop_toBottomOf="@+id/insertweight"
        app:layout_constraintEnd_toEndOf="@+id/pdesc"
        android:focusableInTouchMode="false"
        />
    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/expirationdate"
        app:layout_constraintStart_toStartOf="@+id/pdesc"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Preferred Contact Method"
        />
    <TextView
        android:id="@+id/insertcontact"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:hint="Select Contact"
        android:layout_margin="0dp"
        app:layout_constraintTop_toBottomOf="@+id/expirationdate"
        app:layout_constraintEnd_toEndOf="@+id/pdesc"
        android:padding="0dp" />
    <Button
        android:id="@+id/insertimage"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="@+id/pdesc"
        app:layout_constraintStart_toStartOf="@+id/pdesc"
        android:shape="rectangle"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        android:text="+"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        app:layout_constraintEnd_toStartOf="@+id/insertimage"
        app:layout_constraintStart_toStartOf="@+id/pdesc"
        />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Meeting Location"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image"
        />
    <EditText
        android:id="@+id/insertlocation"
        android:layout_width="150dp"
        android:layout_margin="0dp"
        android:hint="Enter Location"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintEnd_toEndOf="@+id/insertcontact"
        />
    <ImageView
        android:src="@drawable/search_icon"
        android:layout_width="25dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@+id/insertcontact"
        app:layout_constraintLeft_toRightOf="@+id/insertlocation"
        app:layout_constraintBottom_toBottomOf="@+id/insertlocation"
        />
    <ImageView
        android:id="@+id/mapp"
        android:layout_width="@+id/pdesc"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintEnd_toEndOf="@id/insertcontact"
        android:src="@drawable/map"
        android:scaleType="center"
        android:layout_marginTop="4dp"
        />
    <Button
        android:id="@+id/post"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="POST"
        app:layout_constraintTop_toBottomOf="@+id/mapp"
        app:layout_constraintStart_toStartOf="@+id/mapp"
        app:layout_constraintEnd_toEndOf="@+id/mapp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        android:backgroundTint="#18752C"
        android:fontFamily="@font/montserrat_extrabold"

        />
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33AD4E"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:background="@color/white"
        >
        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@color/white"
            android:src="@drawable/lighthome"

            />

        <ImageButton
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@color/white"
            android:src="@drawable/lightmap"

            />
        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/darkadd"
            />

            <ImageButton
                android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/lightfaq"

                />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>